# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{txt,csv}]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.ini]
indent_style = tab

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
